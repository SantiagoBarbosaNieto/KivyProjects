FloatLayout:
	Background:
		canvas.before:
			Color: 
				rgb: (0.9,0.7,0.3)
			Rectangle:
				size : self.size
				pos : self.pos
	Game: 
		canvas.before:
			Color:
				rgb: (0.7,0.7,0.7)
			Rectangle:
				pos : (self.x+10,self.y+10)
				size: (self.height*0.8, self.height*0.8) if self.height*0.8 < self.width-20 else (self.width-20, self.width-20)